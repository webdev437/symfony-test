<div id="createMilestoneModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 500px;">
            <form action="{{ path('addMilestone', {'id': id, 'projectId': projectId }) }}" method ="post">
                <div class="modal-header">						
                    <h4 class="modal-title">Create Milestone</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">	
                    <div class="form-group">
                        <label>Milestone Title</label>
                        <input type="text" class="form-control" name="title" required value="">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" class="form-control" name="description" required value=""></textarea>
                    </div>	
                    <div class="form-group">
                        <label>Deadline</label>
                        <input type="date" class="form-control" id="milestoneDeadline" required name="milestoneDeadline">
                    </div>			
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
